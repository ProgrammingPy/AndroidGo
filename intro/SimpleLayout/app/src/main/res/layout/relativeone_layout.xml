<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="BackMain"
        android:layout_centerInParent="true"
        android:id="@+id/backmain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/one_button"
        android:text="One"
        android:layout_toLeftOf="@id/backmain_button"
        android:layout_above="@id/backmain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text = "Two"
        android:layout_toRightOf="@id/backmain_button"
        android:layout_above="@id/backmain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text = "Three"
        android:layout_toLeftOf="@id/backmain_button"
        android:layout_below="@id/backmain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text = "Four"
        android:layout_toRightOf="@id/backmain_button"
        android:layout_below="@id/backmain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
